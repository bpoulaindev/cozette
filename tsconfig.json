{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "checkJs": true
  },
  "typeRoots": ["./types"],
  "include": [
    "./App.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./index"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "extends": "expo/tsconfig.base"
}
